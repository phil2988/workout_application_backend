// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Exercise {
  id          String   @id @default(cuid())
  title       String?
  description String?
  images      String?
  category    String?
  Workout     Workout[]
}

model Workout {
  id          String     @id @default(cuid())
  title       String?
  description String?
  default     Boolean    @default(false)
  exercises   Exercise[]
}
