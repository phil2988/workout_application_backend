// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Exercise {
  id           String         @id @default(cuid())
  title        String?
  description  String?
  images       String?
  category     String?
  Workout      Workout[]
  ExerciseData ExerciseData[]
}

model Workout {
  id          String     @id @default(cuid())
  title       String?
  description String?
  default     Boolean    @default(false)
  exercises   Exercise[]
}

model ExerciseData {
  id         String   @id @default(cuid())
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId String
  reps       Int
  sets       Int
  weight     Float
}
